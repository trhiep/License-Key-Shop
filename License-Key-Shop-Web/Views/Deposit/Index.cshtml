@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_LayoutCustomer.cshtml";
}

<div class="row container" style="margin-top: 50px; font-size: 26px">
    <div class="col-md-12 text-center">
        <h3 class="balanceDisplay">
            <a class="btn btn-success" style="font-size: 26px">
                <i class="bi bi-cash-stack"></i> SỐ DƯ TÀI KHOẢN:
                @{
                    if (ViewBag.userBalance.Amount != null || ViewBag.userBalance.Amount != 0)
                    {
                        @(ViewBag.userBalance.GetFormattedAmount() + " VND")
                    }
                    else
                    {
                        @("0 VND")
                    }
                }
            </a>
        </h3>
    </div>
</div>

<div class="row container-fluid" style="margin-top: 40px">
    <div class="col-md-2"></div>
    <div class="col-md-8" style="background-color: #BDC1C6; padding-bottom: 20px; border-radius: 10px">
        <div class="row text-center">
            <h4 style="margin-top: 10px">THÔNG TIN NẠP TIỀN</h4>
        </div>
        <div class="row">
            <form asp-action="CreatePaymentUrl" asp-controller="Deposit" method="post">
                <div class="row g-3">
                    <div class="col-12">
                        <label>Nhập số tiền:</label>
                        <input value="@(ViewBag.enteredAmount)" name="amount" type="text" class="form-control" style="height: 55px;" required>
                    </div>
                    <div class="col-md-3"></div>
                    <div class="col-md-6">
                        <button class="btn btn-success w-100 py-3" type="submit"><i class="bi bi-credit-card-2-back"></i> TIẾN HÀNH THANH TOÁN</button>
                    </div>
                    <div class="col-md-3"></div>
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-2"></div>
</div>

<div class="row container-fluid" style="margin-top: 40px">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col" style="font-size: 24px">LỊCH SỬ NẠP TIỀN <i class="bi bi-clock-history"></i></th>
                </tr>
            </thead>
        </table>


        @{
            if (ViewBag.depositHistoryList == null)
            {
                <div class="text-center">
                    <img src="~/img/emptyTask.png" width="250" height="250" alt="emptyTask" />
                    <h5 style="margin-top: 20px">BẠN CHƯA THỰC HIỆN GIAO DỊCH NẠP TIỀN NÀO</h5>
                </div>
            }
            else
            {
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">STT</th>
                            <th scope="col">Số tiền</th>
                            <th scope="col">Ngày nạp</th>
                            <th scope="col">Thực hiện bởi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 1;
                            foreach (var depo in @ViewBag.depositHistoryList)
                            {
                                <tr>
                                    <th scope="row">@(i)</th>
                                    <td>@(depo.Amount)</td>
                                    <td>@(depo.ActionDate)</td>
                                    <td>@(depo.ActionBy)</td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>
            }
        }
    </div>
    <div class="col-md-1"></div>
</div>