@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<!-- Customer List Start -->
<div class="container-fluid pt-5" style="margin-top: 50px; margin-bottom: 50px">
    <div class="container">
        <div class="row g-5">
            @{
                if (ViewBag.customerList != null)
                {
                    <div class="col-lg-12">
                        <div>
                            <h2 class="text-center text-uppercase">Customer List</h2>
                        </div>
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Customer Name</th>
                                    <th scope="col">Username</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Verify Status</th>
                                    <th scope="col">Active Status</th>
                                    <th scope="col" class="text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 1;
                                    foreach (var item in ViewBag.customerList)
                                    {
                                        <tr>
                                            <form asp-action="Update" asp-controller="CustomerManagement" method="post">
                                            <td scope="row">
                                                    @(i)
                                            </td>
                                            <td scope="row">
                                                    @(item.FirstName) @(item.LastName)
                                            </td>
                                            <td scope="row">
                                                    @(item.Username)
                                            </td>
                                            <td scope="row">
                                                    @(item.Email)
                                            </td>
                                            <td scope="row">
                                                    @(item.IsVerified?"Yes":"No")
                                            </td>
                                            <td scope="row">
                                                    @(item.IsActive ? "Yes" : "No")
                                            </td>
                                            <td scope="row" class="text-center">
                                                <a asp-action="ResetPassword" asp-controller="CustomerManagement" asp-route-id="@item.Username" class="btn btn-primary">Reset Password</a>
                                            </td>
                                            </form>
                                        </tr>
                                        i++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                }
            }
        </div>
    </div>
</div>
<!-- Customer List End -->
