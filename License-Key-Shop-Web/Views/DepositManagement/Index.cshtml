@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<!-- Create Start -->
<div class="container-fluid pt-5">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-3"></div>
            <div class="col-lg-6">
                <div class="border-start border-5 border-primary ps-5 mb-5" style="max-width: 600px;">
                    <h1 class="display-5 text-uppercase mb-0">Add Balance For User</h1>
                </div>
                <form action="/DepositManagement/Create" method="post">
                    <div class="row g-3">
                        <div class="col-12">
                            <label style="font-size: 18px">Username</label>
                            <input name="username" type="text" class="form-control bg-light border-1 px-4" style="height: 55px;" required>
                        </div>
                        <div class="col-12">
                            <label style="font-size: 18px">Amount</label>
                            <input name="amount" type="text" class="form-control bg-light border-1 px-4" style="height: 55px;" required>
                        </div>
                        <div class="col-12 text-center text-uppercase">
                            <button class="btn btn-primary w-25 py-3" style="font-size: 18px" type="submit">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-3"></div>
        </div>
    </div>
</div>
<!-- Create End -->

<div class="row container-fluid" style="margin-top: 40px">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col" style="font-size: 24px">DEPOSIT HISTORY LIST</th>
                </tr>
            </thead>
        </table>


        @{
            if (ViewBag.depositHistoryList == null)
            {
                <div class="text-center">
                    <img src="~/img/emptyTask.png" width="250" height="250" alt="emptyTask" />
                    <h5 style="margin-top: 20px">DO NOT HAVE ANY DEPOSIT HISTORY NOW</h5>
                </div>
            }
            else
            {
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">No.</th>
                            <th scope="col">Username</th>
                            <th scope="col">Amount</th>
                            <th scope="col">Action Date</th>
                            <th scope="col">Action By</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 1;
                            foreach (var depo in @ViewBag.depositHistoryList)
                            {
                                <tr>
                                    <th scope="row">@(i)</th>
                                    <th scope="row">@(depo.UserUsername)</th>
                                    <td>@(depo.Amount)</td>
                                    <td>@(depo.ActionDate)</td>
                                    <td>@(depo.ActionBy)</td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>
            }
        }
    </div>
    <div class="col-md-1"></div>
</div>
