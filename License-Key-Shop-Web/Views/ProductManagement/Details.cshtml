@model License_Key_Shop_Web.Models.ProductHe173252
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid" style="margin-top: 100px">
    <h1>Product Details</h1>
    <h4><img class="me-lg-2" src="~/WebStorage/Images/ProductImages/@(ViewBag.prdDetail.Image)" alt="" style="width: 40px; height: 40px;">  @(ViewBag.prdDetail.ProductName)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Catalog name
        </dt>
        <dd class="col-sm-10">
            @{
                foreach (var cate in @ViewBag.cateList)
                {
                    if (cate.CategoryId == ViewBag.prdDetail.CategoryCategoryId)
                    {
                        @(cate.CategoryName)
                    }
                }
            }
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10" style="text-align: justify">
            @Html.Raw(ViewBag.prdDetail.Description)
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @(ViewBag.prdDetail.GetFormattedPrice()) @(ViewBag.currencyUnit)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a> |
    <a asp-action="Update" asp-controller="ProductManagement" asp-route-id="@ViewBag.prdDetail.ProductId" class="btn btn-success">Update</a> |
    <a asp-action="Delete" asp-controller="ProductManagement" asp-route-id="@ViewBag.prdDetail.ProductId" class="btn btn-danger">Delete</a>
</div>
