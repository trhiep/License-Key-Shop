@{
    ViewData["Title"] = "Update";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid" style="margin-top: 100px">
    <h1>Update Product Information</h1>
    <h4><img src="~/WebStorage/Images/ProductImages/@(ViewBag.prdDetail.Image)" style="width: 50px"/> @(ViewBag.prdDetail.ProductName)</h4>
    <hr/>
    <form action="/ProductManagement/Update" method="post" enctype="multipart/form-data">
        <dl class="row">
            <input type="hidden" name="productId" value="@(ViewBag.prdDetail.ProductId)" />
            <dt class="col-sm-2">
                Catalog name
            </dt>
            <dd class="col-sm-10">

                <select name="categoryId" class="form-control form-control-lg bg-light border-1 px-4">
                    @{
                        foreach (var cate in @ViewBag.cateList)
                        {
                            if (cate.CategoryId == ViewBag.prdDetail.CategoryCategoryId)
                            {
                                <option value="@(cate.CategoryId)" selected>@(cate.CategoryName)</option>
                            }
                            else
                            {
                                <option value="@(cate.CategoryId)">@(cate.CategoryName)</option>
                            }
                        }
                    }
                </select>
            </dd>
            <dt class="col-sm-2">
                Product name
            </dt>
            <dd class="col-sm-10">
                <input class="form-control form-control-lg bg-light border-1 px-4" name="productName" value="@(ViewBag.prdDetail.ProductName)" />
            </dd>
            <dt class="col-sm-2">
                Description
            </dt>
            <dd class="col-sm-10" style="text-align: justify">
                <textarea name="description" id="tinymce">@Html.Raw(ViewBag.prdDetail.Description)</textarea>
            </dd>
            <dt class="col-sm-2">
                Price
            </dt>
            <dd class="col-sm-10">
                <input class="form-control form-control-lg bg-light border-1 px-4" name="price" value="@(ViewBag.prdDetail.Price)" />
            </dd>
            <dt class="col-sm-2">
                Image
            </dt>
            <dd class="col-sm-10">
                <input class="form-control form-control-lg" style="height: 55px" type="file" name="imgFile" accept="image/*" />
            </dd>
            <dt class="col-sm-2">
                
            </dt>
            <dd class="col-sm-10">
                <input type="submit" class="btn btn-success" value="Save" />
            </dd>
        </dl>
    </form>
</div>
<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>